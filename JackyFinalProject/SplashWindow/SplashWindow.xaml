<Window x:Class="JackyFinalProject.SplashWindow.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JackyFinalProject.SplashWindow"
        mc:Ignorable="d"
        Title="SplashWindow" Height="600" Width="800"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        ShowInTaskbar="False" Topmost="True">

    <Canvas x:Name="canvasSplash" Style="{StaticResource OverallBackgroundColor1}">
        <Path Name="path" Canvas.Top="40" Canvas.Left="100" Style="{StaticResource PathStyle1}"/>

        <Label x:Name="label" Content="Dynamic Management System" 
               Canvas.Left="270" Canvas.Top="200" Style="{StaticResource LabelStyle1}"/>

        <Label x:Name="label1" Content="v.1.0.0.0" Canvas.Left="660" 
               Canvas.Top="250" Style="{StaticResource LabelStyle2}"/>

        <Image Source="/Images/imgSplash002.png" Canvas.Top="300" Canvas.Left="220"></Image>
    </Canvas>
</Window>
